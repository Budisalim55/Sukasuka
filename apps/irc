#!/usr/bin/env node

var big = require('../big');

//
// Use the repl resource as a make-shift irc client for now
//
big.use('repl');
big.repl.start();

big.use('irc');

big.irc.connect({
  channel: '#big'
}, function (err, motd) {
  if (err) {
    throw err;
  }
  big.irc.join({ channel: '#big'});
});
